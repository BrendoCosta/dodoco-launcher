<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Product>Dodoco Launcher</Product>
        <Version>1.0.0</Version>
        <FileVersion>1.0.0</FileVersion>
        <Authors>Brendo Costa</Authors>
        <Company>https://github.com/BrendoCosta</Company>
        <Description>2023/04/21</Description>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    </PropertyGroup>
    <PropertyGroup>
        <StartupObject>Dodoco.Program</StartupObject>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <PlatformTarget>x64</PlatformTarget>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <ItemGroup>
        <Compile Remove="Web\Build\**" />
        <None Include="Web\Build\**">
            <Link>\Bundle\%(RecursiveDir)%(Filename)%(Extension)</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Grapevine" Version="5.0.0-rc.10" />
        <PackageReference Include="Photino.Native" Version="2.4.1" />
        <PackageReference Include="Photino.NET" Version="2.4.0" />
        <PackageReference Include="Tapper.Analyzer" Version="1.8.2">
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Tapper.Attributes" Version="1.8.2" />
        <PackageReference Include="YamlDotNet" Version="13.1.0" />
    </ItemGroup>
    <Target Name="GenerateTypescriptTypes" BeforeTargets="BeforeBuild">
        <Exec Command="dotnet tool run tapper -p ./dodoco-launcher.csproj -o ./Web/Source/Generated/"/>
    </Target>
</Project>
